<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/reusable_title_background"
    android:padding="5dp" >

    <TextView
        android:id="@+id/reusable_title_back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_back_selector"
        android:drawableLeft="@drawable/title_back_arrow_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:padding="@dimen/title_tv_padding"
        android:text="@string/title_bar_back"
        android:textColor="@color/reusable_title_text"
        android:textSize="@dimen/title_tv_size"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/reusable_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/reusable_title_text"
        android:textSize="@dimen/title_tv_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reusable_title_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_back_selector"
        android:padding="@dimen/title_tv_padding"
        android:textColor="@color/reusable_title_text"
        android:textSize="@dimen/title_tv_size" />

</RelativeLayout>